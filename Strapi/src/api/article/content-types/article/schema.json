    "positionOnMapY": {
      "type": "decimal",
      "required": true
    },
    "description": {
      "type": "blocks"
    },
    "markerType": {
      "type": "enumeration",
      "required": true,
      "enum": ["PL", "EN", "PLW", "PLCIT", "PLCAS", "ENW", "ENCIT", "ENCAS"]
    },
    "title": {
      "type": "string",
      "required": true
    },
    "isEvent": {
      "type": "boolean",
      "required": true
    },
    "simpleDescription": {
      "type": "text",
      "required": true
